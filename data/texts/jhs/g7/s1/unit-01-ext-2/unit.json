      { "speaker": "Amy", "en": "It’s a duck.", "zh": "是鴨子。" },
      { "speaker": "Judy", "en": "Not a duck.", "zh": "不是鴨子。" },
      { "speaker": "David", "en": "It’s a goose.", "zh": "是一隻鵝。" },
      { "speaker": "Judy", "en": "Correct—ten points for you!", "zh": "答對了——給你十分！" },
      { "speaker": "Judy", "en": "Next one: What are these?", "zh": "下一題：這些是什麼？" },
      { "speaker": "David", "en": "Those are lions.", "zh": "那些是獅子。" },
      { "speaker": "Judy", "en": "Sorry, not lions.", "zh": "抱歉，不是獅子。" },
      { "speaker": "Amy", "en": "They are tigers!", "zh": "是老虎！" },
      { "speaker": "Judy", "en": "Right! Amy gets ten points!", "zh": "答對！Amy 獲得十分！" }
    ],
    "game_show_round2": [
      { "speaker": "Judy", "en": "Bonus round! What’s this animal?", "zh": "加分回合！這是什麼動物？" },
